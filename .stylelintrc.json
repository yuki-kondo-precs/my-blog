{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": [
    "**/node_modules/**"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "order/properties-alphabetical-order": true,
    "string-quotes": "single"
  }
}
